{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["ES2015"],

    /* Modules */
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    /* Emit */
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
